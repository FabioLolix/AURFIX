post_install() {
	mkdir -p /var/lib/torrserver
	# Load service file
	systemctl --quiet daemon-reload
}

post_upgrade() {
	mkdir -p /var/lib/torrserver
	# Reload service file
	systemctl --quiet daemon-reload
}

pre_remove() {
	# Stop service
	systemctl --quiet --no-reload disable --now torrserver.service
}

post_remove() {
	# Unload service
	systemctl --quiet daemon-reload
}

