pkgname=free-delta
pkgver=2.9.1
pkgrel=3
pkgdesc="An Open Source System for Processing Taxonomic Descriptions"
arch=('x86_64')
url="http://freedelta.sourceforge.net/"
#url="https://www.delta-intkey.com/"
license=('GPL3')
depends=(gtk2)
makedepends=(lazarus)
source=("${pkgname}-${pkgver}.gz::https://sourceforge.net/projects/freedelta/files/freedelta/fde-source-${pkgver}.gz")
sha256sums=('dcb42658e9533a2d2e9ffa865fff262a712a7e31a7ab94e4d3a91ca31207dd48')

build() {

  lazbuild --lazarusdir=/usr/lib/lazarus fde.lpi
}

package() {
    install -dDm755 "$pkgdir"/usr/{bin,share/free-delta}

	tar -p -xf data.tar.xz -C "${pkgdir}"
}
